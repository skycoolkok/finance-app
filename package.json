{
  "name": "finance-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "prebuild": "node scripts/generate-messaging-sw.cjs",
    "dev": "vite",
    "lint": "cross-env ESLINT_USE_FLAT_CONFIG=false eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "cross-env ESLINT_USE_FLAT_CONFIG=false eslint . --ext .ts,.tsx --fix",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "build": "vite build",
    "preview": "vite preview",
    "i18n:check": "node scripts/check-i18n.cjs"
  },
  "dependencies": {
    "firebase": "^12.3.0",
    "i18next": "^23.16.8",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^13.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^2.1.4",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.1.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^25.0.0",
    "lint-staged": "^15.2.10",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.8.3",
    "vite": "npm:rolldown-vite@7.1.12",
    "vitest": "^2.1.4"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.12"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "cross-env ESLINT_USE_FLAT_CONFIG=false eslint --max-warnings=0 --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss,html}": [
      "prettier --write"
    ]
  }
}
