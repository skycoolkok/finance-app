{
  "name": "functions",
  "private": true,
  "type": "commonjs",
  "main": "lib/index.js",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "clean": "rimraf lib",
    "prepare": "npm run build",
    "config:set:appurl": "firebase functions:config:set app.base_url=\"$APP_BASE_URL\"",
    "config:get": "firebase functions:config:get",
    "deploy:functions": "npm run build && firebase deploy --only functions"
  },
  "dependencies": {
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.6.0",
    "handlebars": "^4.7.8",
    "mjml": "^4.14.1",
    "resend": "^3.5.0"
  },
  "devDependencies": {
    "@types/handlebars": "^4.1.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3"
  }
}
