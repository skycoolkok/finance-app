<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <title>{{heading}}</title>
  </head>
  <body style='font-family: Arial, sans-serif; background: #f8fafc; color: #0f172a;'>
    <table
      role='presentation'
      style='max-width:560px;margin:0 auto;background:#ffffff;padding:24px;border-radius:12px;'
    >
      <tr>
        <td>
          <h1 style='font-size:20px;margin-bottom:12px;'>{{heading}}</h1>
          <p style='font-size:14px;line-height:1.6;margin-bottom:16px;'>{{intro}}</p>
          {{#if facts}}
            <ul style='padding-left:20px;margin-bottom:20px;'>
              {{#each facts}}
                <li style='margin-bottom:6px;'>{{this}}</li>
              {{/each}}
            </ul>
          {{/if}}
          <p style='margin:0 0 20px 0;'>
            <a
              href='{{clickUrl}}'
              style='display:inline-block;padding:10px 16px;background:#0ea5e9;color:#ffffff;text-decoration:none;border-radius:6px;font-weight:600;'
            >
              {{ctaText}}
            </a>
          </p>
          <p style='font-size:12px;color:#64748b;'>
            If the button does not work, copy this link:<br />
            <a href='{{ctaUrl}}'>{{ctaUrl}}</a>
          </p>
          <img src='{{openUrl}}' width='1' height='1' alt='' style='display:none;' />
        </td>
      </tr>
    </table>
  </body>
</html>